<ServiceList version="1" xml:lang="en"
    id="tag:test.com,2024:temporal-image-test"
    xmlns="urn:dvb:metadata:servicediscovery:2024"
    xmlns:dvbi-types="urn:dvb:metadata:servicediscovery-types:2023"
    xmlns:tva="urn:tva:metadata:2024"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="urn:dvb:metadata:servicediscovery:2024 dvbi_v6.0.xsd">

    <Name>Temporal and Image Test List</Name>
    <ProviderName>Test Provider</ProviderName>

    <Service version="1">
        <UniqueIdentifier>tag:test.com,2024:service-temporal-image</UniqueIdentifier>

        <ServiceInstance priority="1">
            <DASHDeliveryParameters>
                <UriBasedLocation contentType="application/dash+xml">
                    <dvbi-types:URI>https://vod.example.com/manifest.mpd</dvbi-types:URI>
                </UriBasedLocation>
                <MinimumBitRate>3000000</MinimumBitRate>
            </DASHDeliveryParameters>
        </ServiceInstance>

        <ServiceName>Test Channel Temporal & Image</ServiceName>
        <ProviderName>Test Provider</ProviderName>

        <!-- Related Material koji sadrÅ¾i PromotionalMedia -->
        <RelatedMaterial>
            <HowRelated href="urn:tva:metadata:cs:HowRelatedCS:2024:16.1">
                <tva:Name>Promotional</tva:Name>
            </HowRelated>
            <PromotionalMedia>
                <!-- TitleImage koristi ImageLocator -->
                <TitleImage>
                    <MediaUri contentType="image/jpeg" uriType="urn:tva:metadata:cs:ImageCS:2024:2.1">
                        https://images.example.com/banner.jpg
                    </MediaUri>
                    <StreamID>123</StreamID>
                    <BytePosition offset="1000" length="5000"/>
                </TitleImage>

                <!-- TitleVideo koristi TemporalSegmentLocator -->
                <TitleVideo>
                    <MediaUri contentType="video/mp4" uriType="urn:tva:metadata:cs:VideoCS:2024:1.2">
                        https://video.example.com/trailer.mp4
                    </MediaUri>
                    <StreamID>456</StreamID>
                    <MediaTime>
                        <MediaTimePoint>T00:01:30F24</MediaTimePoint>
                        <MediaDuration>PT30S</MediaDuration>
                    </MediaTime>
                </TitleVideo>

                <!-- TitleAudio koristi TemporalSegmentLocator -->
                <TitleAudio>
                    <MediaUri contentType="audio/aac" uriType="urn:tva:metadata:cs:AudioCS:2024:1.0">
                        https://audio.example.com/theme.aac
                    </MediaUri>
                    <StreamID>789</StreamID>
                    <MediaTime>
                        <MediaTimePoint>T00:00:15F24</MediaTimePoint>
                        <MediaDuration>PT10S</MediaDuration>
                    </MediaTime>
                </TitleAudio>
            </PromotionalMedia>
        </RelatedMaterial>
    </Service>

</ServiceList>
